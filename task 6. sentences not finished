firstSen = input("Please enter first sentence: ")
secondSen = input("Please enter second sentence: ")

joinedSen = firstSen + secondSen

print("============================================")
print("Our sentences joined together: ")
print(joinedSen)
#adds two sentences together


print("============================================")
print("Our split sentence in the list: ")
splitJoinedSen = joinedSen.split()
print (splitJoinedSen)
#Splits our sentences into a list

splitJoinedSen.sort()
print("============================================")
print("Alphabetical order: ")
print(splitJoinedSen)
#Short our list in alphabetical order

print("============================================")
print("Lenght of our list: ", (len(splitJoinedSen)))
#lenght of our list


print("============================================")

senCountDict = {}

for item in splitJoinedSen:
    if item in senCountDict:
        senCountDict[item] = senCountDict[item] + 1
    else:
        senCountDict[item] = 1

print(senCountDict)
    
for bla in splitJoinedSen:
    print ("Haha: ", bla)

index = 0
while (index < len(splitJoinedSen)):
    print("Huhu: ", splitJoinedSen[index])
    index = index + 1
