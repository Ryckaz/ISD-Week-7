shopping_list = []
print("Start adding items to your shopping list. ")
print("Enter 'Finish' when your list will be full. ")

listCount = -1

while True:

#New items input:
    new_item = input("Add an item: ")
    listCount += 1

#if finish is entered , quits program
    if new_item == 'Finish':
        break

#add items new ittems to our empty shopping list:
    shopping_list.append(new_item)
  

print("Your shopping list: ")
print("You have", listCount , "items in your shopping list: ")
for item in shopping_list: print(item) #it prints all items in our shopping list
